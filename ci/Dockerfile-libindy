# Development
FROM ubuntu:16.04

ARG uid=1000


# Update environment
# JRE installation and gcc
# Update environment
# JRE installation and gcc
RUN apt-get update -y && apt-get install -y \
    gcc \
    pkg-config \
    build-essential \
    libsodium-dev \
    libssl-dev \
    libgmp3-dev \
    libsqlite0 \
    curl \
    libzmq5

# Install libindy
RUN mkdir -p /libindy
WORKDIR /libindy

ENV LIBINDY_DEB=libindy_1.4.0~586_amd64.deb
ENV LIBINDY_DOWNLOAD_URL=https://repo.sovrin.org/sdk/lib/apt/xenial/master/$LIBINDY_DEB

RUN curl -fsOSL $LIBINDY_DOWNLOAD_URL \
    && dpkg -i $LIBINDY_DEB \
    && apt-get -f install

ENV LIBNULLPAY_DEB=libnullpay_0.1.0~586_amd64.deb
ENV LIBNULLPAY_DOWNLOAD_URL=https://repo.sovrin.org/sdk/lib/apt/xenial/master/$LIBNULLPAY_DEB

RUN curl -fsOSL $LIBNULLPAY_DOWNLOAD_URL\
    && dpkg -i $LIBNULLPAY_DEB\
    && apt-get -f install


